<input type="hidden" name="is-loggedIn" value="{{loggedIn}}" />


<div class="h-screen flex justify-center items-center flex-col gap-4">
    <div>
        <form id="search-form">  
        <h2 class="text-xl mb-2">Search Rooms</h2>   
        <div class="mb-6">
            <label class="form-label" for="search">Search: </label>
            <input name="search"  class="form-input bg-[#494B50] text-white"></input>
        </div>

        <div class="text-center lg:text-left">
        <button type="submit"
            class="inline-block px-7 py-3 bg-[#6D9886] text-white font-medium text-sm leading-snug uppercase rounded shadow-md transition duration-150 ease-in-out">
            Search
        </button>
        </div>
        </form>
    </div>

    <div>
        <main class="flex place-items-center flex-col md:flex-row">  
        {{#each rooms as |room|}}
            <div class="border-[#494B50] bg-[#494B50] w-full md:w-11/12 h-[239px] p-4 m-3">
            <p class="text-2xl underline">{{room.title}}:</p> 
            <p class="text-center">{{room.description}}</p>
            <a href="/room/{{room.id}}">join room</a>
            </div>

        {{else}}
        <p>Search returned no results, try a different search or check your spelling.</p>
        {{/each}}
        </main>
    </div>


</div>

<script src="/js/search.js"></script>